<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArditaKrasniqi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#19769F</item>
        <item name="colorPrimaryVariant">#31CBA5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/title_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ArditaKrasniqi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LabelMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EditTextDefault">
        <item name="android:layout_width">165dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/transparent_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/LabelMedium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_button</item>
    </style>


    <style name="ButtonCalculate">
        <item name="android:layout_width">165dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/transparent_background</item>
        <item name="android:textColor">@color/blue1</item>
        <item name="android:textAppearance">@style/LabelMedium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_button</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/title_color</item>
    </style>

</resources>